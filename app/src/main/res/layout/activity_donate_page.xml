<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context=".donatePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Donate:    "
        android:background="#fff0e6"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/titleDonation"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donateInput"
        android:background="#fff0e6"
        android:layout_below="@id/titleDonation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="    amount    "

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:text="    Donate    "
        android:background="#70dbdb"
        android:textSize="14pt"
        android:layout_below="@+id/donateInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="add_money"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Overall donations:    "
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:background="#ffd1b3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/submitBtn"
        android:id="@+id/titleDonationOverall"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:background="#ffd1b3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titleDonationOverall"
        android:id="@+id/donationOverall"
        />

</RelativeLayout>