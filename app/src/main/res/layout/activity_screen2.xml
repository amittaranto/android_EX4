<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen2"
    android:background="@drawable/wall"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Petek"
        android:background="#ff751a"
        android:id="@+id/addPetek"
        android:onClick="addPetek"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:background="#ff751a"
        android:layout_alignParentRight="true"
        android:onClick="edit_screen_redirect"
        android:text="Edit peteks"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff751a"
        android:id="@+id/don"
        android:layout_alignParentLeft="true"
        android:onClick="don_move"
        android:text="Donations"/>

    <ListView
        android:layout_below="@+id/addPetek"
        android:layout_width="wrap_content"
        android:background="#6633cccc"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/ptakim"></ListView>

</RelativeLayout>