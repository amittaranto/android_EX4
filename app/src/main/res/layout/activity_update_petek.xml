<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context=".update_petek">

    <TextView
        android:id="@+id/updatePetek"
        android:textSize="14pt"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:background="#ffd1b3"
        android:layout_height="wrap_content"
        android:text="    Update Petek content    "
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/updateInput"
        android:background="#f2f2f2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint = "    Edit Petek here    "
        android:layout_below="@+id/updatePetek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/updateContent"
        android:onClick="update_petek"
        android:background="#ff751a"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        Update Petek        "/>

</RelativeLayout>